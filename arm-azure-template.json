{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "numberOfWorkers": {
            "defaultValue": "1",
            "type": "string"
        },
        "skuFunction": {
            "defaultValue": "Dynamic",
            "type": "string"
        },
        "skuCodeFunction": {
            "defaultValue": "Y1",
            "type": "string"
        },

        "loactionAks": {
            "type": "string",
            "defaultValue": "westus",
            "metadata": {
                "description": "Project prefix."
            }
        },
        "subscriptionId": {
            "defaultValue": "b5621309-22cd-4fc5-930c-dabc2c4c9ae7",
            "type": "string"
        },
        "loactionAzureFunction": {
            "type": "string",
            "defaultValue": "westus3",
            "metadata": {
                "description": "Project prefix."
            }
        },
        "loactionWebApp": {
            "type": "string",
            "defaultValue": "westus2",
            "metadata": {
                "description": "Project prefix."
            }
        }
    },
    "functions": [],
    "variables": {
        "proj": "proj",
        "env": "dev",
        "aksName": "[concat(variables('proj'), '-', concat(variables('env'), '-aks'))]",

        "azureWebAppName": "[concat(variables('proj'), '-', concat(variables('env'), '-app'))]",
        "aksRgName": "[concat(variables('proj'), '-', concat(variables('env'), '-aks-rg'))]",

        "azureWebAppRgName": "[concat(variables('proj'), '-', concat(variables('env'), '-app-rg'))]",

        ///functions variables  
        "azureFunctionRgName": "[concat(variables('proj'), '-', concat(variables('env'), '-func-rg'))]",
        "azureFunctionName": "[concat(variables('proj'), '-', concat(variables('env'), '-func'))]",
        "azureStorageAcountFunction": "[concat(variables('proj'), concat(variables('env'), 'funcst'))]",
        "azureServicePlanFunction": "[concat(variables('proj'), '-', concat(variables('env'), '-func-plan'))]"
    },
    "resources": [
        {
            "name": "[variables('aksRgName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion":  "2021-04-01",
            "location": "[parameters('loactionAks')]",
            "tags": {}
        },
        {
            "name": "[variables('azureFunctionRgName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion":  "2021-04-01",
            "location": "[parameters('loactionAzureFunction')]",
            "tags": {}
        },
                {
            "name": "[variables('azureWebAppRgName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion":  "2021-04-01",
            "location": "[parameters('loactionWebApp')]",
            "tags": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "nestedTemplate",
            "resourceGroup": "[variables('azureFunctionRgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('azureFunctionRgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "apiVersion": "2018-11-01",
                            "name": "[variables('azureFunctionName')]",
                            "type": "Microsoft.Web/sites",
                            "kind": "functionapp,linux",
                            "location": "[parameters('loactionAzureFunction')]",
                            "tags": {},
                            "dependsOn": [
                                "[resourceId('Microsoft.Web/serverfarms/', variables('azureServicePlanFunction'))]",
                                "[resourceId('Microsoft.Storage/storageAccounts/', variables('azureStorageAcountFunction'))]"                       
                                ],
                            "properties": {
                                "name": "[variables('azureFunctionName')]",
                                "siteConfig": {
                                    "appSettings": [
                                        {
                                            "name": "FUNCTIONS_EXTENSION_VERSION",
                                            "value": "~4"
                                        },
                                        {
                                            "name": "FUNCTIONS_WORKER_RUNTIME",
                                            "value": "python"
                                        }
                                    ],
                                    "cors": {
                                        "allowedOrigins": [
                                            "https://portal.azure.com"
                                        ]
                                    },
                                    "use32BitWorkerProcess": false,
                                    "linuxFxVersion": "Python|3.9"
                                },
                                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('azureServicePlanFunction'))]",
                                "clientAffinityEnabled": false,
                                "virtualNetworkSubnetId": null
                            }
                        },
                        
                        {
                            "apiVersion": "2019-06-01",
                            "type": "Microsoft.Storage/storageAccounts",
                            "name": "[variables('azureStorageAcountFunction')]",
                            "location": "[parameters('loactionAzureFunction')]",
                            "dependsOn":[
                                "[resourceId(parameters('subscriptionId'),'Microsoft.Resources/resourceGroups', variables('azureFunctionRgName'))]"
                            ],
                            "tags": {},
                            "sku": {
                                "name": "Standard_LRS"
                            },
                            "properties": {
                                "supportsHttpsTrafficOnly": true,
                                "minimumTlsVersion": "TLS1_2"
                            }
                        },
                        {

                            "apiVersion": "2018-11-01",
                            "name": "[variables('azureServicePlanFunction')]",
                            "type": "Microsoft.Web/serverfarms",
                            "location": "[parameters('loactionAzureFunction')]",
                            "kind": "linux",
                            "tags": {},
                            "dependsOn": [
                                "[resourceId(parameters('subscriptionId'),variables('azureFunctionRgName'),'Microsoft.Storage/storageAccounts', variables('azureStorageAcountFunction'))]" 
                             ],
                            "properties": {
                                "name": "[variables('azureServicePlanFunction')]",
                                "workerSize": 0,
                                "workerSizeId": 0,
                                "numberOfWorkers": "[parameters('numberOfWorkers')]",
                                "reserved": true
                            },
                            "sku": {
                                "Tier": "[parameters('skuFunction')]",
                                "Name": "[parameters('skuCodeFunction')]"
                            }
                        }
                    ]
                },
                "parameters": {}
            }
        }
    ],
    "outputs": {}
}