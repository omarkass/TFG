{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "numberOfWorkers": {
            "defaultValue": "1",
            "type": "string"
        },
        "deployThisResource":{
            "type": "bool",
            "defaultValue": true
        },
        "SQL-User": {
            "type": "string",
            "defaultValue": "omar1",
            "minLength": 5,
            "metadata": {
                "description": "SQL administrator user."
            }
        },
        "SQL-Pass": {
            "type": "string",
            "defaultValue": "Kassar@14689",
            "minLength": 5,
            "metadata": {
                "description": "SQL administrator user password."
            }
        },
        "kubernetesVersion": {
            "type": "string",
            "defaultValue": "1.23.3",
            "metadata": {
                "description": "The version of Kubernetes."
            }
        },
        "skuFunction": {
            "defaultValue": "Dynamic",
            "type": "string"
        },
        "skuCodeFunction": {
            "defaultValue": "Y1",
            "type": "string"
        },

        "loactionAks": {
            "type": "string",
            "defaultValue": "East US",
            "metadata": {
                "description": "Project prefix."
            }
        },
        "subscriptionId": {
            "defaultValue": "b5621309-22cd-4fc5-930c-dabc2c4c9ae7",
            "type": "string"
        },
        "loactionAzureFunction": {
            "type": "string",
            "defaultValue": "East US",
            "metadata": {
                "description": "Project prefix."
            }
        },
        "loactionSqlDatabase": {
            "type": "string",
            "defaultValue": "East US",
            "metadata": {
                "description": "Project prefix."
            }
        },
        "loactionWebApp": {
            "type": "string",
            "defaultValue": "East US",
            "metadata": {
                "description": "Project prefix."
            }
        }
    },
    "functions": [],
    "variables": {
        "proj": "proj",
        "env": "dev",
        "aksName": "[concat(variables('proj'), '-', concat(variables('env'), '-aks'))]",


        "aksRgName": "[concat(variables('proj'), '-', concat(variables('env'), '-aks-rg'))]",
        ///webApp variables  
        "azureWebAppRgName": "[concat(variables('proj'), '-', concat(variables('env'), '-app-rg'))]",
        "azureServicePlanWebApp": "[concat(variables('proj'), '-', concat(variables('env'), '-app-plan'))]",
        "azureWebAppName": "[concat(variables('proj'), '-', concat(variables('env'), '-app'))]",
        ///function variables  
        "azureFunctionRgName": "[concat(variables('proj'), '-', concat(variables('env'), '-func-rg'))]",
        "azureFunctionName": "[concat(variables('proj'), '-', concat(variables('env'), '-func'))]",
        "azureServicePlanFunction": "[concat(variables('proj'), '-', concat(variables('env'), '-func-plan'))]",
        "azureStorageAcountFunction": "[concat(variables('proj'), concat(variables('env'), 'funcst55'))]",
        //sql database variables 
        "sqlServerName": "[concat(variables('proj'), '-', concat(variables('env'), '-sql'))]",
        "sqlDatabaseName": "[concat(variables('sqlServerName'),'/',concat(variables('proj'), '-', concat(variables('env'), '-sqldb')))]",
        "sqlRgName": "[concat(variables('proj'), '-', concat(variables('env'), '-sql-rg'))]"


    },
    "resources": [
        {
            "name": "[variables('aksRgName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2021-04-01",
            "location": "[parameters('loactionAks')]",
            "tags": {}
        },
        {
            "name": "[variables('azureFunctionRgName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2021-04-01",
            "location": "[parameters('loactionAzureFunction')]",
            "tags": {}
        },
        {
            "name": "[variables('sqlRgName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2021-04-01",
            "location": "[parameters('loactionSqlDatabase')]",
            "tags": {}
        },
        {
            "name": "[variables('azureWebAppRgName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2021-04-01",
            "location": "[parameters('loactionWebApp')]",
            "tags": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "functionDeployment",
            "resourceGroup": "[variables('azureFunctionRgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('azureFunctionRgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Web/sites",  
                            "condition": "[parameters('deployThisResource')]",
                            "apiVersion": "2018-11-01",
                            "name": "[variables('azureFunctionName')]",
                            "location": "[parameters('loactionAzureFunction')]",
                            //  "value": "[if(parameters('deployThisResource'), listKeys(resourceId('Microsoft.DocumentDb/databaseAccounts', variables('cosmosAccountName')), '2020-04-01').primaryMasterKey, 'does not matter')]"
                            "dependsOn": [
                                "[resourceId(parameters('subscriptionId'),variables('azureFunctionRgName'),'Microsoft.Web/serverfarms', variables('azureServicePlanFunction'))]",
                                "[resourceId(parameters('subscriptionId'),variables('azureFunctionRgName'),'Microsoft.Storage/storageAccounts', variables('azureStorageAcountFunction'))]"
                            ],
                            "tags": {
                            },
                            "kind": "functionapp,linux",
                            "properties": {
                                "name": "[variables('azureFunctionName')]",
                                "siteConfig": {
                                    "appSettings": [
                                        {
                                            "name": "FUNCTIONS_EXTENSION_VERSION",
                                            "value": "~4"
                                        },
                                        {
                                            "name": "FUNCTIONS_WORKER_RUNTIME",
                                            "value": "python"
                                        }
                                       , {
                                            "name": "AzureWebJobsStorage",
                                            "value": "[if(parameters('deployThisResource'),concat('DefaultEndpointsProtocol=https;AccountName=',variables('azureStorageAcountFunction'),';AccountKey=',listKeys(resourceId(parameters('subscriptionId'),variables('azureFunctionRgName'),'Microsoft.Storage/storageAccounts', variables('azureStorageAcountFunction')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net'),'dosent matter')]"
                                        }
                                    ],
                                    "cors": {
                                        "allowedOrigins": [
                                            "https://portal.azure.com"
                                        ]
                                    },
                                    "use32BitWorkerProcess": false,
                                    "linuxFxVersion": "Python|3.9"
                                },
                                "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', variables('azureFunctionRgName'), '/providers/Microsoft.Web/serverfarms/', variables('azureServicePlanFunction'))]",
                                "clientAffinityEnabled": false,
                                "virtualNetworkSubnetId": null
                            }
                        },
                        {
                            "type": "Microsoft.Web/serverfarms",
                            "apiVersion": "2018-11-01",
                            "name": "[variables('azureServicePlanFunction')]",
                            "location": "[parameters('loactionAzureFunction')]",
                            "dependsOn": [
                                "[resourceId(parameters('subscriptionId'),variables('azureFunctionRgName'),'Microsoft.Storage/storageAccounts', variables('azureStorageAcountFunction'))]"
                            ],
                            "sku": {
                                "Tier": "[parameters('skuFunction')]",
                                "Name": "[parameters('skuCodeFunction')]"
                            },
                            "kind": "linux",
                            "properties": {
                                "name": "[variables('azureServicePlanFunction')]",
                                "workerSize": "0",
                                "workerSizeId": "0",
                                "numberOfWorkers": "[parameters('numberOfWorkers')]",
                                "reserved": true
                            }
                        },
                        {
                            "type": "Microsoft.Storage/storageAccounts",
                            "apiVersion": "2019-06-01",
                            "name": "[variables('azureStorageAcountFunction')]",
                            "location": "[parameters('loactionAzureFunction')]",
                            "sku": {
                                "name": "Standard_LRS"
                            },
                            "properties": {
                                "supportsHttpsTrafficOnly": true,
                                "minimumTlsVersion": "TLS1_2"
                            }
                        }
                    ]
                },
                "parameters": {}
            }
            
        }
        /*,
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "webAppDeployment",
            "resourceGroup": "[variables('azureWebAppRgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('azureWebAppRgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Web/sites",
                            "apiVersion": "2018-11-01",
                            "name": "[variables('azureWebAppName')]",
                            "location": "[parameters('loactionWebApp')]",
                            "dependsOn": [
                                "[concat('Microsoft.Web/serverfarms/', variables('azureServicePlanWebApp'))]"
                            ],
                            "tags": {},
                            "properties": {
                                "name": "[variables('azureWebAppName')]",
                                "siteConfig": {
                                    "appSettings": [],
                                    "linuxFxVersion": "PYTHON|3.9",
                                    "alwaysOn": false
                                },
                                "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', variables('azureWebAppRgName'), '/providers/Microsoft.Web/serverfarms/', variables('azureServicePlanWebApp'))]",
                                "clientAffinityEnabled": false,
                                "virtualNetworkSubnetId": null
                            }
                        },
                        {
                            "type": "Microsoft.Web/serverfarms",
                            "apiVersion": "2018-11-01",
                            "name": "[variables('azureServicePlanWebApp')]",
                            "location": "[parameters('loactionWebApp')]",
                            "dependsOn": [],
                            "tags": {},
                            "sku": {
                                "Tier": "Free",
                                "Name": "F1"
                            },
                            "kind": "linux",
                            "properties": {
                                "name": "[variables('azureServicePlanWebApp')]",
                                "workerSize": 0,
                                "workerSizeId": 0,
                                "numberOfWorkers": 1,
                                "reserved": true,
                                "zoneRedundant": false
                            }
                        }
                    ]
                },
                "parameters": {}
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "aksDeployment",
            "resourceGroup": "[variables('aksRgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('aksRgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.ContainerService/managedClusters",
                            "apiVersion": "2021-07-01",
                            "name": "[variables('aksName')]",
                            "location": "[parameters('loactionAks')]",
                            "dependsOn": [],
                            "tags": {},
                            "sku": {
                                "name": "Basic",
                                "tier": "Free"
                            },
                            "identity": {
                                "type": "SystemAssigned"
                            },
                            "properties": {
                                "kubernetesVersion": "[parameters('kubernetesVersion')]",
                                "enableRBAC": true,
                                "dnsPrefix": "dns",
                                "agentPoolProfiles": [
                                    {
                                        "name": "agentpool",
                                        "osDiskSizeGB": 0,
                                        "count": 2,
                                        "enableAutoScaling": false,
                                        "vmSize": "Standard_B2s",
                                        "osType": "Linux",
                                        "storageProfile": "ManagedDisks",
                                        "type": "VirtualMachineScaleSets",
                                        "mode": "System",
                                        "maxPods": 110,
                                        "availabilityZones": [],
                                        "enableNodePublicIP": false,
                                        "tags": {}
                                    }
                                ],
                                "networkProfile": {
                                    "loadBalancerSku": "standard",
                                    "networkPlugin": "kubenet"
                                },
                                "apiServerAccessProfile": {
                                    "enablePrivateCluster": false
                                },
                                "addonProfiles": {
                                    "httpApplicationRouting": {
                                        "enabled": true
                                    },
                                    "azurepolicy": {
                                        "enabled": false
                                    },
                                    "azureKeyvaultSecretsProvider": {
                                        "enabled": false
                                    }
                                }
                            }
                        }
                    ]

                },
                "parameters": {}
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "sqlDeployment",
            "resourceGroup": "[variables('sqlRgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('sqlRgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            ///Sql Server
                            "name": "[variables('sqlServerName')]",
                            "type": "Microsoft.Sql/servers",
                            "apiVersion": "2021-05-01-preview",
                            "location": "[parameters('loactionSqlDatabase')]",
                            "dependsOn": [],
                            "tags": {
                                "displayName": "SQL"
                            },
                            "kind": "v12.0",
                            "properties": {
                                "administratorLogin": "[parameters('SQL-User')]",
                                "administratorLoginPassword": "[parameters('SQL-Pass')]",
                                "version": "12.0",
                                "publicNetworkAccess": "Enabled",
                                "restrictOutboundNetworkAccess": "Disabled"
                            },
                            "resources": [
                                {
                                    "type": "Microsoft.Sql/servers/databases",
                                    "name": "[variables('sqlDatabaseName')]",
                                    "location": "[parameters('loactionSqlDatabase')]",
                                    "dependsOn": [
                                        "[resourceId(parameters('subscriptionId'),variables('sqlRgName'),'Microsoft.Sql/servers', variables('sqlServerName'))]"
                                    ],
                                    "apiVersion": "2021-02-01-preview",
                                    "properties": {
                                        "collation": "SQL_Latin1_General_CP1_CI_AS"
                                    }
                                }
                            ]
                        }
                    ]

                },
                "parameters": {}
            }
        }
        */
    ],
    "outputs": {}
}