{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sites_funcfunc22_name": {
            "defaultValue": "funcfunc22",
            "type": "String"
        },
        "loactionAzureFunction": {
            "type": "string",
            "defaultValue": "East US",
            "metadata": {
                "description": "Project prefix."
            }
        }
    },
    "variables": {
        "proj": "proj",
        "env": "dev",
        "aksName": "[concat(variables('proj'), '-', concat(variables('env'), '-aks'))]",
        "aksRgName": "[concat(variables('proj'), '-', concat(variables('env'), '-aks-rg'))]",
        ///webApp variables  
        "azureWebAppRgName": "[concat(variables('proj'), '-', concat(variables('env'), '-app-rg'))]",
        "logAnalyticsName": "[concat(variables('proj'), '-', concat(variables('env'), '-func-log'))]",
        "applicationInsghtsName": "[concat(variables('proj'), '-', concat(variables('env'), '-func-appi'))]"
        
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2021-03-01",
            "name": "[parameters('sites_funcfunc22_name')]",
            "location": "[parameters('loactionAzureFunction')]",
            "tags": {
                "hidden-link: /app-insights-resource-id": "/subscriptions/b5621309-22cd-4fc5-930c-dabc2c4c9ae7/resourceGroups/funcfunc22_group/providers/Microsoft.Insights/components/funcfunc22"
            },
            "kind": "functionapp,linux",
            "properties": {
                "enabled": true,
                "hostNameSslStates": [
                    {
                        "name": "[concat(parameters('sites_funcfunc22_name'), '.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Standard"
                    },
                    {
                        "name": "[concat(parameters('sites_funcfunc22_name'), '.scm.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Repository"
                    }
                ],
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', 'service-plan')]",
                "reserved": true,
                "isXenon": false,
                "hyperV": false,
                "siteConfig": {
                    "numberOfWorkers": 1,
                    "linuxFxVersion": "Python|3.9",
                    "acrUseManagedIdentityCreds": false,
                    "alwaysOn": false,
                    "http20Enabled": false,
                    "functionAppScaleLimit": 200,
                    "minimumElasticInstanceCount": 0
                },
                "scmSiteAlsoStopped": false,
                "clientAffinityEnabled": false,
                "clientCertEnabled": false,
                "clientCertMode": "Required",
                "hostNamesDisabled": false,
                "customDomainVerificationId": "F62AFBF6C67BA01336124F1EB112ED939A68691C3C72F779C24D6EAC89C3EE80",
                "containerSize": 1536,
                "dailyMemoryTimeQuota": 0,
                "httpsOnly": false,
                "redundancyMode": "None",
                "storageAccountRequired": false,
                "keyVaultReferenceIdentity": "SystemAssigned"
            }
        },
        {
            "type": "microsoft.insights/components",
            "apiVersion": "2020-02-02",
            "name": "[variables('applicationInsghtsName')]",
            "location": "[parameters('loactionAzureFunction')]",
            "kind": "web",
            "properties": {
                "Application_Type": "web",
                "Flow_Type": "Redfield",
                "Request_Source": "IbizaWebAppExtensionCreate",
                "RetentionInDays": 10,

                "WorkspaceResourceId": "[resourceId('microsoft.operationalinsights/workspaces',variables('logAnalyticsName'))]",
                "IngestionMode": "LogAnalytics",
                "publicNetworkAccessForIngestion": "Enabled",
                "publicNetworkAccessForQuery": "Enabled"
            }
        },
         {
      "name": "[concat(variables('applicationInsghtsName'),'/Basic')]",
      "type": "Microsoft.Insights/components/CurrentBillingFeatures",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-05-01",
      "properties": {
        "CurrentBillingFeatures": "Basic",
        "DataVolumeCap": {
          "Cap": 5,
          "WarningThreshold": 90,
          "ResetTime": 23
        }
      }
    },
        {
            "type": "microsoft.operationalinsights/workspaces",
            "apiVersion": "2021-12-01-preview",
            "name": "[variables('logAnalyticsName')]",
            "location": "[parameters('loactionAzureFunction')]",
            "properties": {
                "sku": {
                    "name": "pergb2018"
                },
                "retentionInDays": 10,
                "features": {
                    "enableLogAccessUsingOnlyResourcePermissions": true
                },
                "workspaceCapping": {
                    "dailyQuotaGb": 1
                },
                
                "publicNetworkAccessForIngestion": "Enabled",
                "publicNetworkAccessForQuery": "Enabled"
            }
        }

    ]
}